{
  "name": "@palleter/linq-to-sql",
  "version": "0.1.0",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib"
  ],
  "dependencies": {
    "@types/dotenv": "^2.0.20",
    "@types/jest": "^18.1.1",
    "@types/knex": "^0.0.41",
    "@types/pg": "^6.1.37",
    "dotenv": "^4.0.0",
    "jest": "^19.0.0",
    "knex": "^0.12.7",
    "pg": "^6.1.2",
    "ts-jest": "^19.0.0",
    "ts-node": "^2.1.0",
    "typescript": "^2.1.6"
  },
  "scripts": {
    "build": "tsc",
    "migrate": "knex migrate:latest && knex seed:run",
    "rollback": "knex migrate:rollback",
    "test": "jest",
    "watch": "tsc --watch",
    "clean": "rimraf lib"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/",
      "<rootDir>/lib/"
    ],
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "devDependencies": {
    "flow-bin": "^0.39.0",
    "flowgen": "^1.0.1",
    "rimraf": "^2.6.1"
  }
}
